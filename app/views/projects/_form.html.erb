<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@project.errors.count, "error") %> does not include enough schwartz. Use more schwartz before this project can be created.</h2>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :technologies_used %><br />
    <%= f.text_area :technologies_used %>
  </div>
  <%= f.hidden_field :image_cache %>
  <%= f.file_field :image %>
  <p>
  <%= f.label :remote_image_url, "or image URL" %>
  <%= f.text_field :remote_image_url %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

