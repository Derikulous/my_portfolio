<p>
  <h1><%= @post.title %></h1>
</p>
<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p id="author">
  <b>By:</b>
  <%= @post.author.email %>
</p>

<% if policy(@post).update? %>
<%= link_to 'Edit Post', edit_post_path(@post) %> |
<% end %>

<%= render 'comments/form' %>

<%= render 'comments/show' %>
<%= link_to 'Back to the blog', posts_path %>
